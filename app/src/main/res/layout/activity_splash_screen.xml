<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SplashScreenActivity">

        <ImageView
            android:id="@+id/curtain_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/steel_curtain"
            android:contentDescription="@string/curtain_going_up"
            android:scaleType="fitXY"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/splash_screen_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/splash_logo"
                android:layout_width="@dimen/splash_logo"
                android:layout_height="@dimen/splash_logo"
                android:layout_marginTop="@dimen/thumbnail_margin"
                android:contentDescription="@string/app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo_launcher" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</layout>