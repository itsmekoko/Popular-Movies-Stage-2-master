<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/author_pic_tv"
        android:layout_width="@dimen/small_icon_size"
        android:layout_height="@dimen/small_icon_size"
        android:layout_marginLeft="@dimen/large_spacing"
        android:layout_marginStart="@dimen/large_spacing"
        android:layout_marginTop="@dimen/large_spacing"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/reviewer_pic_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="I" />

    <TextView
        android:id="@+id/author_name_tv"
        android:layout_width="@dimen/no_spacing"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/large_spacing"
        android:layout_marginLeft="@dimen/medium_spacing"
        android:layout_marginRight="@dimen/large_spacing"
        android:layout_marginStart="@dimen/medium_spacing"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toTopOf="@+id/author_pic_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/author_pic_tv"
        app:layout_constraintTop_toBottomOf="@+id/author_pic_tv"
        tools:text="@tools:sample/first_names" />

    <TextView
        android:id="@+id/review_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/large_spacing"
        android:layout_marginLeft="@dimen/large_spacing"
        android:layout_marginRight="@dimen/large_spacing"
        android:layout_marginStart="@dimen/large_spacing"
        android:layout_marginTop="@dimen/medium_spacing"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author_pic_tv"
        tools:text="@tools:sample/lorem" />

    <View
        android:layout_width="@dimen/no_spacing"
        android:layout_height="@dimen/thumbnail_border_padding"
        android:layout_marginBottom="@dimen/medium_spacing"
        android:layout_marginTop="@dimen/medium_spacing"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/review_content_tv"
        app:layout_constraintStart_toStartOf="@+id/review_content_tv"
        app:layout_constraintTop_toBottomOf="@id/review_content_tv" />
</android.support.constraint.ConstraintLayout>